{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "es2020",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "jslib-common/*": ["jslib/common/src/*"],
      "jslib-node/*": ["jslib/node/src/*"]
    }
  },
  "include": ["src"]
}
